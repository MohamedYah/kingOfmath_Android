<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="50dp"
    >


    <Button
        android:id="@+id/match2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:background="@drawable/button_border1"
        android:textColor="#fff"
        android:onClick="onClick"
        android:layout_below="@+id/match1"
        android:layout_alignLeft="@+id/match1"
        android:layout_alignStart="@+id/match1" />

    <Button
        android:id="@+id/match3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:background="@drawable/button_border1"
        android:textColor="#fff"
        android:onClick="onClick"
        android:layout_below="@+id/match2"
        android:layout_alignLeft="@+id/match2"
        android:layout_alignStart="@+id/match2"
        />

    <Button
        android:id="@+id/match1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:background="@drawable/button_border1"
        android:textColor="#fff"
        android:onClick="onClick"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="151dp" />

    <TextView
        android:id="@+id/textConnected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#f00"
        android:text=""
        android:gravity="center_horizontal"
        />


</RelativeLayout>
