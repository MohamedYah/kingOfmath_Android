<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registre"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.mathman.activity.RegistreActivity"
    android:background="#ffff4d"
    >


    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Login"
                android:ems="10"
                android:id="@+id/login"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:ems="10"
                android:id="@+id/loginIC"
                android:textColor="#D32F2F"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:ems="10"
                android:id="@+id/password"
                android:inputType="textPassword"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:ems="10"
                android:textColor="#D32F2F"
                android:id="@+id/passwordIC"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="confirm password"
                android:ems="10"
                android:inputType="textPassword"
                android:id="@+id/confirmPassword"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#D32F2F"
                android:ems="10"
                android:id="@+id/confirmPasswordIC"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="birthday"
                android:ems="10"
                android:id="@+id/birthday"
                android:inputType="date"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#D32F2F"
                android:ems="10"
                android:id="@+id/birthdayIC"
                android:inputType="date"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose school
"               android:textSize="20dp"
                android:ems="30"
                android:inputType="date"
                android:layout_centerHorizontal="true" />

            <Spinner
                android:id="@+id/school"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/edtDate"
                android:layout_centerHorizontal="true"></Spinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose hero"
                android:textSize="20dp"
                android:ems="30"
                android:inputType="date"
                android:layout_centerHorizontal="true" />


            <LinearLayout
                android:id="@+id/listPlayer"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/choose">
                <ImageButton
                    android:id="@+id/player1"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:background="@null"
                    />
                <ImageButton
                    android:id="@+id/player2"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:padding="5dp"
                    android:layout_marginLeft="3dp"
                    android:scaleType="centerCrop"
                    android:background="@null"
                    />
                <ImageButton
                    android:id="@+id/player3"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:padding="5dp"
                    android:layout_marginLeft="3dp"
                    android:scaleType="centerCrop"
                    android:background="@null"
                    />

                <ImageButton
                    android:id="@+id/player4"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:padding="5dp"
                    android:layout_marginLeft="3dp"
                    android:scaleType="centerCrop"
                    android:background="@null"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#D32F2F"
                android:ems="10"
                android:id="@+id/playerIC"
                android:inputType="date"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true" />

            <Button
                    android:id="@+id/registre"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColor="#fff"
                    android:text="enregistrer"
                    android:onClick="onClick"
                    android:background="@drawable/button_border"
                    android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
